#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main()
{

	char *filename = "Harry Potter and the Order of the Phoenix.txt";
	FILE *novelfile;
	int word;
	char letter;
	char *data;

	if((novelfile = fopen(filename,"r")) == NULL)
	{
		printf("ERROR!File can't be Opened!\n");
		exit(1);
	}

	while(( word = fgetc(novelfile)) != EOF)	//判断文件是否结束
	{
		letter = (char)word;
		if( letter != ' ' )
			strcat(data,(char *)letter);
			//temp = strcat(data,word);
		else
			printf("%s\n",data);
	}	

	return 0;
}
